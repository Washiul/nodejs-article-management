<html>
<head>
    <title>Article</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
    
    {{>header}}

    <main role="main">
    	<div class="container">
    	    <div class="row">

                {{>admin/navigation}}

                <div class="content col-md-10 d-md-block">
                	{{#if (isTrue errors)}}
		              <div class="alert alert-danger mt-2" role="alert">
		                  {{#each errors}}
		                    <p>{{this.msg}}</p>
		                  {{/each}}
		              </div>
		            {{/if}}
		            
		            {{>message}}

				    <form action="/dashboard/profile" method="post" enctype="multipart/form-data">
				      <div class="form-group">
				      	<img class="profile-pic" src="{{ user.avater }}">
					   <input type="file" name="avater" />
					  </div>
				      <div class="form-group">
					    <label for="exampleInputName1">Your name</label>
					    <input name="name" type="text" class="form-control" value="{{user.name}}" placeholder="Enter your name">
					  </div>
					  <div class="form-group">
					    <label for="exampleInputEmail1">Email address</label>
					    <input type="email" class="form-control" value="{{user.email}}" placeholder="Enter email" disabled>
					  </div>
					  <div class="form-group">
					    <label for="exampleInputphone1">Phone number</label>
					    <input type="text" name="phone" class="form-control" value="{{user.phone}}" placeholder="Enter phone number">
					  </div>
					  <div class="form-group">
						   <div class="form-check form-check-inline">
						   	{{#if (isEqual user.gender 'male')}}
							  <input class="form-check-input" type="radio" name="gender" id="inlineRadio1" value="male" checked>							  
							{{else}}
							  <input class="form-check-input" type="radio" name="gender" id="inlineRadio1" value="male" checked>
							{{/if}}
							<label class="form-check-label" for="inlineRadio1">Male</label>
						   </div>
						   <div class="form-check form-check-inline">
						   	{{#if (isEqual user.gender 'female')}}
							  <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="female" checked>
							{{else}}
							  <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="female">
							{{/if}}
							  <label class="form-check-label" for="inlineRadio2">Female</label>
							</div>
							<div class="form-check form-check-inline">
							{{#if (isEqual user.gender 'other')}}
							  <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="other" checked>
							{{else}}
							  <input class="form-check-input" type="radio" name="gender" id="inlineRadio2" value="other">
							{{/if}}
							  <label class="form-check-label" for="inlineRadio2">Other</label>
							</div>
						</div>
					    <button type="submit" class="btn btn-primary">Update</button>
					</form>
                </div>
            </div>
        </div>
	</main>

    {{>footer}}
    
</body>
</html>